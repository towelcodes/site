---
import Ticker from "../components/Ticker.astro"
import WavyText from "../components/WavyText.svelte";
import MainHeader from "../components/MainHeader.astro";
import PointyThing from "../components/PointyThing.astro";
import {Image} from "astro:assets";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="me" href="https://ohai.social/@teatowel"/>
		<meta name="generator" content={Astro.generator} />
		<title>Teatowel</title>
	</head>
	<body class="mocha">
		<!--<PointyThing/>-->
		<div class="w-1/2 mx-auto">
			<aside class="ml-auto w-1/6">
				<slot name="sidebar" />
			</aside>
			<div class="flex">
				<MainHeader />
				<div class="colour-card">
					<Image src="https://skillicons.dev/icons?i=astro" alt="astro" width="30" height="30" data-tooltip="astro"/>
				</div>
			</div>
			<div class="card p-4">
				<slot/>
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
