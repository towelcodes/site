---
import Ticker from "../components/Ticker.astro"
import WavyText from "../components/WavyText.svelte";
import MainHeader from "../components/MainHeader.astro";
import HeaderButton from "../components/HeaderButton.astro";
import PointyThing from "../components/PointyThing.astro";
import LocalTime from "../components/LocalTime.astro";
import {Image} from "astro:assets";
import GithubIcon from "../assets/icon/github.svg";
import DiscordIcon from "../assets/icon/discord.svg";
import AbyssIcon from "../assets/icon/abyss2.png";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="me" href="https://ohai.social/@teatowel"/>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=open_in_new,person,schedule" />
		<meta name="generator" content={Astro.generator} />
		<title>Teatowel</title>
	</head>
	<body class="mocha">
		<PointyThing/>
		<div class="flex flex-nowrap">
			<aside class="ml-auto w-1/6">
				<slot name="sidebar-l" />
			</aside>
			<div class="w-1/2">
				<div class="flex items-stretch">
					<MainHeader>
						<div class="flex [&>*]:mx-1">
							<a href="https://github.com/towelcodes"><HeaderButton colour="bg-mauve">
									<Image src={GithubIcon} alt="github" width="16" height="16" class="inline-block filter-black"/>
									GitHub
							</HeaderButton></a>
							<a href="https://discord.com/users/951330347541491802"><HeaderButton colour="bg-blue">
								<Image src={DiscordIcon} alt="discord" width="16" height="16" class="inline-block filter-black"/>
								Discord
							</HeaderButton></a>
							<a href="https://void.towel.codes"><HeaderButton colour="bg-teal">
								<Image src={AbyssIcon} alt="abyss" width="16" height="16" class="inline-block"/>
								Abyss Instance
							</HeaderButton></a>
							<div class="self-end ml-auto grow text-right">
								<LocalTime/>
							</div>
						</div>
					</MainHeader>
					<div class="colour-card flex flex-col justify-evenly">
						<Image src="https://skillicons.dev/icons?i=astro" alt="astro" width="30" height="30" data-tooltip="astro"/>
						<Image src="https://skillicons.dev/icons?i=bun" alt="astro" width="30" height="30" data-tooltip="bun"/>
						<Image src="https://skillicons.dev/icons?i=svelte" alt="astro" width="30" height="30" data-tooltip="svelte"/>
					</div>
				</div>

				<div class="card p-4">
					<slot/>
				</div>
			</div>
			<aside class="mr-auto w-1/6">
				<slot name="sidebar-r" />
			</aside>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
